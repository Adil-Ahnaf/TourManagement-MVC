@model RegisterViewModel

<div class="container mt-5">
    <div class="row ">
        <div class="offset-md-4 col-md-4 login-form">
            <form asp-controller="Account" asp-action="UserSignUp" method="post" novalidate="novalidate">
                <div class="text-danger" asp-validation-summary="All"></div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Name">Name</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger m-sm-1"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Email">Email</label>
                    <input type="email" class="form-control" aria-describedby="emailHelp" asp-for="Email">
                    <span asp-validation-for="Email" class="text-danger m-sm-1"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Address">Address</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" asp-for="Address">
                    <span asp-validation-for="Address" class="text-danger m-sm-1"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Phone">Phone</label>
                    <input type="number" class="form-control" aria-describedby="emailHelp" asp-for="Phone">
                    <span asp-validation-for="Phone" class="text-danger m-sm-1"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Password">Password</label>
                    <input type="password" class="form-control" asp-for="Password">
                    <span asp-validation-for="Password" class="text-danger m-sm-1"></span>
                </div>
                <button type="submit" class="btn btn-secondary">SignUp</button>
            </form>
        </div>
    </div>
</div>